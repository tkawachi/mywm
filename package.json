{
  "name": "mywm-chrome-extension",
  "version": "1.0.0",
  "description": "MyWM - Window Manager Chrome Extension",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.254",
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "*.js",
      "!tests/**",
      "!jest.config.js",
      "!coverage/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}